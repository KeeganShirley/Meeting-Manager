@page
@model Meeting_Manager.Pages.Profile.Student_ProfileModel
@{
}

   
<div style="position: relative; left: 125px;">
    <h3>My Student Profile</h3>
</div>



@*//Sidebar with Options*@


    <div style="width: 175px; height: 100%; position: fixed; left: 0; top: 0; overflow-y: scroll; background-color: #CBC3E3;">
    <ul>
        <li><button style="background-color: white;">My Meetings</button></li>
        <li><button style="background-color: white;">Profile</button></li>
        <li><button style="background-color: white;">Queue</button></li>

    </ul>
</div>



@*//Chart for Student Profile Options*@

<div style="position: relative; left: 125px;">
<table class="table table-bordered table-striped">

    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Preferred Phone Number</th>
            <th>Group Partner First Name:</th>
            <th>Group Partner Last Name:</th>
        </tr>
    </thead>
    <tbody>
        <tr>

                @{
                    foreach (var studentprofile in Model.StudentList)
                    {
                    <tr>
                        <td contenteditable ="true">@studentprofile.StudentFName</td>
                        <td contenteditable="true">@studentprofile.StudentLName</td>
                        <td contenteditable="true">@studentprofile.StuEmail</td>
                        <td contenteditable="true">@studentprofile.StuPhoneNum</td>
                        <td contenteditable="true">@studentprofile.GroupPartnerFirstName</td>
                        <td contenteditable="true">@studentprofile.GroupPartnerLastName</td>
                    </tr>
                    }


                }
            <td>  <div class="btn-group" role="group">
                <button id="saveButton">Save Changes</button>
                    
                </div>
            </td>

        </tr>

      
    </tbody>
</table>



    <script>

        document.getElementById("saveButton").addEventListener("click", function () {
            var xhr = new XMLHttpRequest();
            xhr.open("POST", "/api/officehours", true);
            xhr.setRequestHeader("Content-Type", "application/json");
            xhr.onreadystatechange = function () {
                if (xhr.readyState === 4 && xhr.status === 200) {
                    // Handle the response from the server
                }
            };
            var data = JSON.stringify({
                col1Value1: document.getElementById("col1-row1").value,
                col2Value1: document.getElementById("col2-row1").value,
                col3Value1: document.getElementById("col3-row1").value,
                col4Value1: document.getElementById("col4-row1").value,
                col5Value1: document.getElementById("col5-row1").value,
                col6Value1: document.getElementById("col6-row1").value
            });
            xhr.send(data);
        });
    </script>



 
</div>







