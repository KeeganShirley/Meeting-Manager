@model Meeting_Manager.Pages.Profile.EditFacultyProfileModel
@{
    List<SelectListItem> classSelectList = new List<SelectListItem>(); // Convert list of classes from model to selectlist
    foreach (var c in Model.ClassList)
    {
        classSelectList.Add(new SelectListItem
                {
                    Text = c.ClassID,
                    Value = c.ClassID
                });
    }
}

<form method="post" asp-page-handler="Logout">
    <button type="submit" style="position: fixed; top: 10px; right: 10px;" class="btn btn-link">Logout</button>
</form>

